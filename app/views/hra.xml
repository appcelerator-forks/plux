<Alloy>
	<Window title="Health Risk Assessment" id="hra" backButtonTitle="" class="container" navTintColor="#CE1D1C" >
		<View layout="vertical">
			<View layout="horizontal" height="50" width="Ti.UI.FILL" backgroundColor="#DEDEDE" platform="android" > 
				<View left="0" width="20%">
		         	<ImageView left='10' id="btnBack" width="25" height="25" image="/images/btn-back.png" />
		   		</View>
		     	<View width="60%">
		     		<Label id="pageTitle" height="Ti.UI.SIZE" class='normal_font' textAlign="center">Health Risk Assessment</Label>
		     	</View>
		 	</View>
			<TableView id="menu"> 
	            	<TableViewRow mod="bmi" height="40" top="5" bottom="5" ><Label textAlign="left" height="Ti.UI.SIZE" left="15" width="Ti.UI.SIZE">BMI Calculator</Label></TableViewRow>
	            	<TableViewRow mod="whratio" height="40" top="5" bottom="5" ><Label textAlign="left" height="Ti.UI.SIZE"  left="15"  width="Ti.UI.SIZE">Waist-To-Hips Ratio Calculator</Label></TableViewRow>
	            	<TableViewRow mod="nutritional_profile" height="40" top="5" bottom="5" ><Label textAlign="left"  left="15"  height="Ti.UI.SIZE" width="Ti.UI.SIZE">Nutritional Profile</Label></TableViewRow>
	            	<TableViewRow mod="smokecost" height="40" top="5" bottom="5" ><Label textAlign="left" height="Ti.UI.SIZE"  left="15"  width="Ti.UI.SIZE">Smoking Cost Calculator</Label></TableViewRow>
	            	<TableViewRow mod="diabetes" height="40" top="5" bottom="5"  ><Label textAlign="left" height="Ti.UI.SIZE" left="15"  width="Ti.UI.SIZE">Diabetes Risk Calculator</Label></TableViewRow>
	            	<!--<ListItem mod="chd" title="Coronary Heart Disease Risk Calculator"></ListItem>-->
	         
			</TableView>
		</View>
	</Window>
</Alloy>