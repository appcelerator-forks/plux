<Alloy>  
	<Window title="Appointment Clinic List" id="win" fullscreen="true" > 
		<View layout="horizontal" height="50" width="Ti.UI.FILL" backgroundColor="#DEDEDE" platform="android" > 
			<View left="0" width="20%">
		    	<ImageView left='10' id="btnBack" width="25" height="25" image="/images/btn-back.png" />
			</View>
		    <View width="60%">
		    	<Label id="pageTitle" height="Ti.UI.SIZE" class='normal_font' textAlign="center">Doctor List</Label>
			</View> 
		</View>
		 	
		<View platform="ios" top="0" height="50" backgroundColor="#DEDEDE"> 
			<View left="0" zIndex="9" width="20%" onClick="closeWin">
				<ImageView left='10'  width="25" height="25" image="/images/btn-back.png" />
			</View>
			<View >
				<Label id="titleLbl" height="Ti.UI.SIZE" textAlign="center">Appointment Clinic list</Label>
		   </View>
		</View>
		<View layout="vertical" id="loadingBar" height="0" width="120" borderRadius="15" backgroundColor="#2E2E2E" >
			<ActivityIndicator id="activityIndicator" />
			<Label top="5" class="center" text="Loading" color="#ffffff" />
		</View>
			 
		<View id="doctorView" class="vert"  > 
			<View class="wfill hfill vert" id="doctorContainer"  /> 
		</View>
	</Window> 
</Alloy>