<Alloy>
<Window title="Ask Me - Helpline" id="win" backButtonTitle="" class="container" navTintColor="#CE1D1C">
	<WebView url="/html/index.html" id="socket" class="wfill" height="0"></WebView>
	<View class="hfill wfill vert">
		<View layout="horizontal" height="50" width="Ti.UI.FILL" backgroundColor="#DEDEDE" platform="android" > 
			<View left="0" width="20%">
	         	<ImageView left='10' id="btnBack" onClick="closeWindow" width="25" height="25" image="/images/btn-back.png" />
	   		</View>
	     	<View width="60%">
	     		<Label id="pageTitle" height="Ti.UI.SIZE" class='normal_font' textAlign="center">Ask Me - Helpline</Label>
	     	</View>
	 	</View>
	 	<ScrollView class="wfill hfill" contentHeight="Ti.UI.FILL" contentWidth="Ti.UI.FILL">
	 		<View backgroundColor="#ffffff" zIndex="10" width="200" class="hsize box rounded">
	 			<Label id="estimate" class="wfill hsize padding h5" color="#f63d3d" > 
	 			</Label>
	 		</View>
	    	<ScrollView id="chatroom" backgroundRepeat="true" backgroundImage="/images/grey-patern-bg.png" class="wfill hfill" bottom="60" contentHeight="Ti.UI.SIZE" contentWidth="Ti.UI.FILL">
	    		<View id="inner_area" class="wfill hsize vert" bottom="20">
	    			<Label onClick="getPreviousData" class="wfill hsize box padding h5" textAlign="center">More</Label>
	    		</View>
			</ScrollView>
		    <View backgroundColor="white" class="wfill horz hsize" bottom="0">
		    	<TextField id="message" class="padding" width="70%"></TextField>
		    	<Button class="small_button" height="35" width="60" right="10" onClick="SendMessage">Send</Button>
		    </View>
	    </ScrollView>
	</View>
</Window>
</Alloy>