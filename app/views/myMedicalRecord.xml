<Alloy>
	<Window title="My Medical Record" backButtonTitle="" class="container" navTintColor="#CE1D1C" platform="ios">
		<RightNavButton>
	        <View>
	         	<Button id="newRecord" title="Add" />
	        </View>
        </RightNavButton>
	 	<View>
		 	<View layout="vertical" id="loadingBar" height="120" width="120" borderRadius="15" backgroundColor="#2E2E2E" >
	        	<ActivityIndicator  id="activityIndicator" />
	        	<Label id="loading" top="5" text="Loading" color="#ffffff" />
	        </View>
			<View id="aView" height="Ti.UI.SIZE" top="0" layout="vertical"> 
				<SearchBar tintColor="#CE1D1C"  id="searchItem" showCancel="true" text=""  top="0" height="50" hintText="Search medical data..." /> 
			 	<ScrollView id="recordView" layout="vertical" height="Ti.UI.SIZE" width="100%" >
			 		<TableView width="100%"  id="recordTable"  top="0"  separatorColor="#375540" />
			 	</ScrollView>
			</View> 
		</View>
	</Window>
</Alloy>