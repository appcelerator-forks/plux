<Alloy>
	<NavigationWindow id="navMenu" platform="ios">
		<Window id="win" title="" navBarHidden="true" class="container">
			<WebView zIndex="100" url="/html/socket.html" id="socket" class="wfill" height="0"></WebView>
			<View id="main">
				<View id="daily_background" width="Ti.UI.FILL" height="Ti.UI.FILL"></View>
				<View layout="">
					<ImageView id="logo" borderRadius="10" width="100" height="100" top="10" left="10" defaultImage="/images/logo_plux.png" image="/appicon-60@3x.png" zIndex="5" />
					<View zIndex="4" id="myinfo_view" layout="horizontal" height="Ti.UI.SIZE" top="20" backgroundColor="#B3000000"> 
						<!--<View height="40" id="fbloginView" />-->
						<View layout="horizontal" left="110" width="Ti.UI.FILL" top="10" bottom="10" height="60" id="myInfo" />
					</View>
					<View layout="vertical" id="loadingBar" height="0" width="120" borderRadius="15" top="0" opacity="0" backgroundColor="#2E2E2E" >
				        <ActivityIndicator  id="activityIndicator" />
				    	<Label top="5" bottom="10" text="Loading" color="#ffffff" />
				    </View>
					<ScrollView id="scrollboard" width="293" contentWidth="293" height="Ti.UI.FILL" class="horz" zIndex="3">
							<!--<ImageView onClick="navWindow" mod="appointment" top="15"  width="139" image="/images/btn/btn_appointment.png"/> 
						-->
							<View class="hsize wsize">
								<ImageView onClick="navWindow" mod="notification" top="15"  width="139" image="/images/btn/btn_notification.png"/>
								<View width="30" height="30" borderRadius="15" id="notificationIcon" backgroundColor="#CE1D1C" top="20" right="15" >
									<Label id="notificationText" text="0" color="#ffffff" />
								</View>
							</View>
					</ScrollView>
				</View>
			</View>
		</Window>
	</NavigationWindow>
</Alloy>