<Alloy>
	<ScrollView id="aView" class="wfill hfill vert" top="10"  contentWidth="Ti.UI.FILL" contentHeight="Ti.UI.SIZE"  backgroundColor="#ffffff"  >
	 	<View id="tvrName"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
			<View class="horz hsize wfill"  textAlign="right" >
				<Label text="Patient Name" top="12" width="35%" class="h5 padding-left themeColor"  /> 
				<View width="auto"  class="right-align hsize" >
					<Label text="Date of visit a clinic" class="wfill padding padding-right h6 right-align" top="12"  id="patient_name"  color="#000000"  />  
				</View> 
			</View>
		</View> 
		<View class="gray-line" /> 
		
		 <View id="tvrEmail"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
			<View class="horz hsize wfill "  textAlign="right" >
				<Label text="Patient Email" top="12" width="35%" class="h5 padding-left themeColor"  /> 
				<View width="auto"  class="right-align hsize" >
					<Label text="Date of visit a clinic" class="wfill padding padding-right h6 right-align" top="12"  id="patient_email" color="#000000"   />  
				</View> 
			</View>
		</View> 
		<View class="gray-line" /> 
		 
		<View id="tvrDateVisit"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff"  >
			<View class="horz hsize wfill "  textAlign="right" >
				<Label text="Appointment Date & Time" top="12" width="35%" class="h5 padding-left themeColor"  /> 
				<View width="auto"  class="right-align hsize" >
					<Label text="Choose Date and Time" class="wfill padding padding-right font_dark_grey h6 right-align" top="12"  id="appointment_datetime"    />  
				</View> 
			</View>
		</View> 
		<View class="gray-line" />
		<View height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
			<View class="horz hsize wfill "  textAlign="right" >
				<Label text="Clinic" top="12" width="35%" class="h5 padding-left themeColor"  /> 
				<View width="auto"  class="right-align hsize" >
					<Label text="Choose Clinic to attend" class="wfill padding padding-right font_dark_grey h6 right-align" top="12" id="appointment_clinic" />  
				</View> 
			</View>
		</View> 
		<View class="gray-line" />
		<View class="hsize vert" selectedBackgroundColor="#ffffff" >
			<View class="horz hsize wfill "  textAlign="right" >
				<Label text="Specialty" top="12" width="35%" class="h5 padding-left themeColor"  /> 
				<View width="auto"  class="right-align hsize" >
					<Label text="Choose Specialty" class="wfill padding padding-right font_dark_grey h6 right-align" top="12" id="specialty" />  
				</View> 
			</View>
		</View>
		<View class="gray-line" />
		<View id="tvrRemark"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff"  >
			<View class="horz hsize wfill "  textAlign="right" >
				<Label text="Remark" top="12" width="35%" class="h5 padding-left themeColor"  /> 
				 
				<TextArea id="remarkTextArea" class="h6" color="#000000" textAlign="right" hintText="Remark" value="" width="Ti.UI.FILL" left="10" right="10" height="100" suppressReturn="false" >
			 		<KeyboardToolbar platform="ios">
						<Toolbar>
							<Items> 
								<FlexSpace/>
								<Button onClick="hideKeyboard" backgroundImage="/images/btn-down.png" textAlign="right" right="5" width="20" height="20"  />
							</Items>
						</Toolbar>
					</KeyboardToolbar>
			 	</TextArea>
			 	
			</View>
		</View> 
		<View class="gray-line" /> 
		<View class="wfill hsize vert" top="10" id="aView"> 
			<Button onClick="saveRecord"  id="saveRecord" title="Submit Appointment" borderRadius="5" backgroundColor="#7B7B7B"    width="70%" top="5" height="40" color="#ffffff" ></Button> 
		</View>  
	</ScrollView>
</Alloy>