<Alloy>
	<Window id="win" title="Appointment Form" backButtonTitle="" class="container" navTintColor="#CE1D1C">
		<RightNavButton>
	        <View>
	         	<Button id="saveRecord" onClick="saveRecord" title="Done" />
	        </View>
        </RightNavButton>
	 	<View layout="vertical" >
	 		<View layout="horizontal" height="50" width="Ti.UI.FILL" backgroundColor="#DEDEDE" platform="android" > 
				<View left="0" width="20%">
		         	<ImageView left='10' id="btnBack" width="25" height="25" image="/images/btn-back.png" />
		   		</View>
		     	<View width="60%">
		     		<Label id="pageTitle" height="Ti.UI.SIZE" class='normal_font' textAlign="center">Appointment Form</Label>
		     	</View>
		     	<View left="0" width="20%">
		         	<Button class="navbtn" id="saveRecord" onClick="saveRecord" title="Done" />
		   		</View>
		 	</View>
	 	 
			<ScrollView id="aView" height="Ti.UI.FILL"  contentHeight="Ti.UI.SIZE" layout="vertical" > 
				<Label height="Ti.UI.SIZE" width="Ti.UI.FILL" left="10" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT">Patient Name</Label>
				<Label height="Ti.UI.SIZE" width="Ti.UI.FILL" class="medium_font greyText" left="20" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" id="patient_name"></Label>
				
				<Label height="Ti.UI.SIZE" width="Ti.UI.FILL" left="10" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT">Patient Email</Label>
				<Label height="Ti.UI.SIZE" width="Ti.UI.FILL" class="medium_font greyText" left="20" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" id="patient_email"></Label>
				
				
				<Label height="Ti.UI.SIZE" width="Ti.UI.FILL" left="10" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT">Appointment Date & Time</Label>
				<Label height="Ti.UI.SIZE" width="Ti.UI.FILL" class="medium_font greyText" left="20" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" id="appointment_datetime">Choose Date and Time</Label>
				
				<Label height="Ti.UI.SIZE" width="Ti.UI.FILL" left="10" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT">Clinic</Label>
				<Label height="Ti.UI.SIZE" width="Ti.UI.FILL" class="medium_font greyText" left="20" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" id="appointment_clinic">Choose Clinic to attend</Label>
				
				
				<Label height="Ti.UI.SIZE" width="Ti.UI.FILL" left="10" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT">Remark</Label>
			 	<Label height="0" width="Ti.UI.FILL" class="medium_font greyText" left="20" top="10" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" id="remarkTextArea_readonly" ></Label>
				<TextArea id="remarkTextArea" backgroundColor="#f6f6f6" color="#888" textAlign="left" hintText="Remark" value="" width="Ti.UI.FILL" left="10" right="10" height="200" suppressReturn="false" >
			 		<KeyboardToolbar platform="ios">
						<Toolbar>
							<Items> 
								<FlexSpace/>
								<Button onClick="hideKeyboard" backgroundImage="/images/btn-down.png" textAlign="right" right="5" width="20" height="20"  />
							</Items>
						</Toolbar>
					</KeyboardToolbar>
			 	</TextArea>
			 	
				 
			</ScrollView>
		</View>
		 <View id="appointmentDateTime" height="0"  visible="0" /> 
	</Window>
</Alloy>