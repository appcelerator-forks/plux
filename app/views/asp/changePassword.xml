<Alloy>
	<Window navTintColor="#CE1D1C" id="login" title="Login" id="changePasswordWin" class="container" layout="vertical">
	 
        	<View layout="vertical" id="loadingBar" height="0" width="120" borderRadius="15"  backgroundColor="#2E2E2E" >
		        <ActivityIndicator  id="activityIndicator" />
		    	<Label top="5" text="Loading" color="#ffffff" />
		    </View>
		    <View layout="vertical" height="100%">
			    <View layout="horizontal" height="50" width="100%" backgroundColor="#DEDEDE" platform="android" > 
					<View left="0" width="20%">
			         	<ImageView left='10' id="btnBack" width="25" height="25" image="/images/btn-back.png" />
			   		</View>
			     	<View id="pageTitle" width="60%">
			     		<Label height="Ti.UI.SIZE" class='normal_font' textAlign="center">Change Password</Label>
			     	</View>
			      
			 	</View>
			<ScrollView id="main" layout="vertical" height="100%" contentHeight="Ti.UI.SIZE">
				<ImageView width="120" borderRadius="10" height="120" backgroundColor="#ff0000" bottom="30dp" top="30dp" image="/images/asp_logo.png"></ImageView>
				<Label id="description" class="label" />
				<TextField id="password" hintText="Enter Password"   value="" /><!--asplux123 -->
				<TextField id="password2" hintText="Enter Confirm Password"  top="10" value="" /><!--asplux@corpdemo.com -->
				<Button borderRadius="5" backgroundColor="#7B7B7B" onTouchend="submitPassword" title="Change Password"  width="70%" top="10" height="40" color="#ffffff" />
			</ScrollView>
		</View><!--
		<View height="5%" id="footer" layout="horizontal" verticalAlign="middle">
			 <Label class="ftText">ASPplux</Label>
			 <Label class="ftText">|</Label>
			 <Label class="ftText">Privacy & Terms</Label>
			 <Label class="ftText">|</Label>
			 <Label class="ftText">Help</Label>
		</View>-->
	</Window>
</Alloy>